<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="peopleItem"
            type="com.example.buidanhnam.demomvvm.screen.main.PeopeleItemViewModel"/>
    </data>
<android.support.constraint.ConstraintLayout 
    android:layout_width="match_parent"
    android:layout_height="60dp">
    
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_avata"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center|left"
        android:padding="4dp"
        android:src="@{peopleItem.urlImage}"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        app:layout_constraintVertical_chainStyle="spread"
        app:layout_constraintVertical_weight="4"
        android:id="@+id/tv_name_song"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="@{peopleItem.name}"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_name_singer"
        app:layout_constraintLeft_toRightOf="@+id/img_avata"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        app:layout_constraintVertical_weight="1"
        app:layout_constraintTop_toBottomOf="@+id/tv_name_song"
        app:layout_constraintLeft_toRightOf="@+id/img_avata"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="3dp"
        android:layout_width="wrap_content"
        android:text="@{peopleItem.genger}"
        android:textSize="15sp"
        android:id="@+id/tv_name_singer"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center|left"
        android:layout_height="wrap_content" />

</android.support.constraint.ConstraintLayout>
</layout>